{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "definitions": {
    "authorityBase": {
      "type": "object",
      "properties": {
        "fullName": {
          "type": "string"
        },
        "nameType": {
          "type": "string",
          "enum": [
            "Organizational",
            "Personal"
          ]
        },
        "authorityIdentifiers": {
          "type": "array",
          "items": {
            "type": "object",
            "properties": {
              "identifier": {
                "type": "string"
              },
              "scheme": {
                "type": "string",
                "enum": [
                  "orcid",
                  "scopusID",
                  "researcherID",
                  "czenasAutID",
                  "vedidk",
                  "institutionalID",
                  "ISNI",
                  "ROR",
                  "ICO",
                  "DOI"
                ]
              }
            },
            "required": [
              "identifier",
              "scheme"
            ],
            "uniqueItems": true
          }
        }
      },
      "required": [
        "fullName",
        "nameType"
      ]
    },
    "person": {
      "allOf": [
        {
          "$ref": "#/definitions/authorityBase"
        },
        {
          "type": "object",
          "properties": {
            "nameType": {
              "type": "string",
              "enum": [
                "Personal"
              ]
            },
            "affiliations": {
              "$ref": "../taxonomy-v2.0.0.json#/definitions/Term",
              "description": "taxonomie institutions"
            }
          }
        }
      ]
    },
    "organization": {
      "$comment": "Alzp: Name of the property? Should be object?",
      "anyOf": [
        {
          "$ref": "#/definitions/authorityBase"
        },
        {
          "$ref": "../taxonomy-v2.0.0.json#/definitions/Term"
        }
      ]
    },
    "authority": {
      "oneOf": [
        {
          "$ref": "#/definitions/person"
        },
        {
          "$ref": "#/definitions/organization"
        }
      ]
    },
    "objectPID": {
      "description": "Persistent identifier/s of object",
      "type": "object",
      "additionalProperties": false,
      "properties": {
        "identifier": {
          "type": "string"
        },
        "scheme": {
          "type": "string",
          "enum": [
            "DOI",
            "Handle",
            "ISBN",
            "ISSN",
            "RIV"
          ]
        }
      },
      "required": [
        "identifier",
        "scheme"
      ],
      "uniqueItems": true
    },
    "dateOrRange": {
      "type": "string",
      "anyOf": [
        {
          "format": "year"
        },
        {
          "format": "yearmonth"
        },
        {
          "format": "date"
        },
        {
          "format": "datetime"
        },
        {
          "format": "year-range"
        },
        {
          "format": "yearmonth-range"
        },
        {
          "format": "date-range"
        },
        {
          "format": "datetime-range"
        }
      ]
    },
    "date": {
      "type": "string",
      "anyOf": [
        {
          "format": "year"
        },
        {
          "format": "yearmonth"
        },
        {
          "format": "date"
        },
        {
          "format": "datetime"
        }
      ]
    },
    "location": {
      "type": "object",
      "additionalProperties": false,
      "properties": {
        "place": {
          "type": "string"
        },
        "country": {
          "$ref": "../taxonomy-v2.0.0.json#/definitions/Term"
        }
      },
      "required": [
        "place",
        "country"
      ]
    },
    "longitude": {
      "type": "number",
      "minimum": -180,
      "maximum": 180
    },
    "latitude": {
      "type": "number",
      "minimum": -90,
      "maximum": 90
    },
    "Document": {
      "id": "#document",
      "type": "object",
      "additionalProperties": false,
      "properties": {
        "titles": {
          "description": "Titles of the object/work.",
          "type": "array",
          "items": {
            "type": "object",
            "additionalProperties": false,
            "properties": {
              "title": {
                "$ref": "../multilingual-v2.0.0.json#/definitions/multilingual"
              },
              "titleType": {
                "type": "string",
                "enum": [
                  "mainTitle",
                  "alternativeTitle",
                  "subtitle",
                  "other"
                ]
              }
            },
            "required": [
              "title",
              "titleType"
            ]
          },
          "minItems": 1,
          "uniqueItems": true,
          "$requirments": "dataPilot  - MARSHMALLOW required mainTitle, pro vkládání nevidím problém, pro harvest se vždy nastavil main. ZÁVĚR P: nerušit"
        },
        "creators": {
          "$comment": "vrátit se k required v definicích.",
          "type": "array",
          "items": {
            "$ref": "#/definitions/authority"
          },
          "minItems": 1,
          "uniqueItems": true
        },
        "contributors": {
                "type": "array",
                "items": {
                  "allOf": [
                    {
                      "$ref": "#/definitions/authority"
                    },
                    {
                      "type": "object",
                      "properties": {
                        "role": {
                          "$ref": "../taxonomy-v2.0.0.json#/definitions/Term"
                        }
                      }
                    }
                  ]
                },
                "uniqueItems": true
              },
        "resourceType": {
          "description": "Taxonomy driven typology of objects that's possible to store in the repository",
          "$ref": "../taxonomy-v2.0.0.json#/definitions/Term"
        },
        "dateIssued": {
          "description": "The date the resource is originaly published by publisher, in case of grey literature made publicly available by the institution.",
          "$comment": "týká se dokumentu, nikoliv metadat!!!",
          "$comment1": "jiné než dateAvailable pro data, vždy se vyplní ručně. v datacite ve formě YYYY odpovídá PublicationYear.",
          "$ref": "#/definitions/date"
        },
        "dateAvailable": {
          "description": "The date the resource is publicly available in a repository.",
          "$comment": "týká se dokumentu, nikoliv metadat!!!",
          "$comment1": "stejně jako dateAvailable pro data, budou se přes něj řídit přístupy - embargo",
          "$ref": "#/definitions/date"
        },
        "dateModified": {
          "description": "The date of the last update to the resource, not metadata",
          "$comment": "týká se dokumentu/obsahu, nikoliv metadat!!!",
          "$comment1": "neukazuje se ve vkládacím formuláři. jen při editaci záznamu!",
          "$ref": "#/definitions/date"
        },
        "subjects": {
            "description": "subject by vocabularies or free-form keywords created by author(s)",
            "type": "array",
            "items": {
                "type": "object",
                "properties": {
                    "subject": {"type": "multilingual"},
                    "subjectScheme": {"type": "string"},
                    "classificationCode": {"type": "string"},
                    "valueURI": {"type": "string", "format": "uri"}
                },
                "required": ["subject"]
            },
            "uniqueItems": true
        },
        "publishers": {
          "description": "volný zápis vydavatele",
          "type": "array",
          "items": {
            "type": "string"
          },
          "uniqueItems": true
        },
        "subjectCategories": {
          "description": "FRASCATI oborové třídění - může sloužit jako podklad pro oborové filtrování",
          "$ref": "../taxonomy-v2.0.0.json#/definitions/Term",
          "uniqueItems": true
        },
        "languages": {
          "description": "ISO 639-2 B in slug, ISO 639-2 T in alias, ISO 639-1 as Alpha2.",
          "type": "array",
          "items": {
            "$ref": "../taxonomy-v2.0.0.json#/definitions/Term"
          },
          "uniqueItems": true
        },
        "notes": {
          "description": "Free-form note for any comment that couldn't be inserted in any other field.",
          "type": "array",
          "items": {
            "type": "string"
          },
          "uniqueItems": true
        },
        "abstract": {
          "$oai" : "povinnost v marshmallow neplatí pro harvest",
          "description": "Multilingual abstract description for record (may contain HTML).",
          "$ref": "../multilingual-v2.0.0.json#/definitions/multilingual"
        },
        "methods": {
          "description": "Multilingual methodology employed for the study or research.(may contain HTML)",
          "$ref": "../multilingual-v2.0.0.json#/definitions/multilingual"
        },
        "technicalInfo": {
          "description": "Multilingual detailed information that may be associated with design, implementation, operation, use, and/or maintenance of a process or system.(may contain HTML)",
          "$ref": "../multilingual-v2.0.0.json#/definitions/multilingual"
        },
        "rights": {
          "$comment": "POLE array",
          "description": "Any license or copyright information for this resource. Taxonomy field.",
          "$ref": "../taxonomy-v2.0.0.json#/definitions/Term",
          "uniqueItems": true
        },
        "accessRights": {
          "description": "Taxonomy driven list of possible access to the document - open, embargoed, restirected and metadata only access. Based on COAR vocabulary - http://vocabularies.coar-repositories.org/documentation/access_rights/",
          "$comment": "Pokud není vypublikovaný, tak restricted. Po vypublikování pokud dateAvailable je v budoucnosti, tak embargoed. Jinak Open Access. Pokud popisuje fyzický objekt (tištěnou knihu), tak metadata only",
          "$ref": "../taxonomy-v2.0.0.json#/definitions/Term"
        },
        "relatedItems": {
          "description": "linkdata, propojení přidružených dokumentů a datasetů.",
          "type": "array",
          "items": {
            "type": "object",
            "additionalProperties": false,
            "properties": {
              "itemTitle": {
                "description": "název propojeného dokumentu",
                "type": "string"
              },
              "itemCreators": {
                "type": "array",
                "items": {
                  "$ref": "#/definitions/authority"
                },
                "uniqueItems": true
              },
              "itemContributors": {
                "type": "array",
                "items": {
                  "allOf": [
                    {
                      "$ref": "#/definitions/authority"
                    },
                    {
                      "type": "object",
                      "properties": {
                        "role": {
                          "$ref": "../taxonomy-v2.0.0.json#/definitions/Term"
                        }
                      }
                    }
                  ]
                },
                "uniqueItems": true
              },
              "itemPIDs": {
                "type": "array",
                "items": {
                  "$ref": "#/definitions/objectPIDs",
                  "required": [
                    "identifier",
                    "scheme"
                  ],
                  "uniqueItems": true
                }
              },
              "itemURL": {
                "type": "string",
                "format": "URL"
              },
              "itemYear": {
                "type": "integer",
              },
              "itemVolume": {
                "type": "string"
              },
              "itemIssue": {
                "type": "string"
              },
              "itemStartPage": {
                "type": "string"
              },
              "itemEndPage": {
                "type": "string"
              },
              "itemPublisher": {
                "type": "string"
              },
              "itemRelationType": {
                "description": "typ vztahu k původnímu popisovanému dok.",
                "$ref": "../taxonomy-v2.0.0.json#/definitions/Term"
              },
              "itemResourceType": {
                "$ref": "../taxonomy-v2.0.0.json#/definitions/Term"
              }
            },
            "required": [
              "itemTitle"
            ]
          },
          "uniqueItems": true
        },
        "fundingReferences": {
          "description": "informace o přidruženém projektu",
          "$comment": "MIGRACE NUŠL - tohle by bylo dobré, protože v datech NUŠL hrozný stav v polích pro poskytovatele. u českých projektů na základě prvních dvou znaků v řetězci s identifikátorem projektu lze přiřadit poskytovatele.",
          "type": "array",
          "items": {
            "type": "object",
            "additionalProperties": false,
            "properties": {
              "projectID": {
                "type": "string"
              },
              "projectName": {
                "type": "string"
              },
              "fundingProgram": {
                "type": "string"
              },
              "funder": {
                "$ref": "../taxonomy-v2.0.0.json#/definitions/Term"
              }
            },
            "required": [
              "projectID",
              "funder"
            ]
          },
          "uniqueItems": true
        },
        "version": {
          "$comment": "verze obsahu, nikoliv záznamu. hodnota ve formuláři není editovatelná.",
          "type": "string"
        },
        "geoLocations": {
          "type": "array",
          "items": {
            "type": "object",
            "properties": {
              "geoLocationPlace": {
                "description": "Free description of the location; ie. Atlantic Ocean",
                "type": "string"
              },
              "geoLocationPoint": {
                "type": "object",
                "properties": {
                  "pointLongitude": {
                    "$ref": "#/definitions/longitude"
                  },
                  "pointLatitude": {
                    "$ref": "#/definitions/latitude"
                  }
                },
                "required": [
                  "pointLongitude",
                  "pointLatitude"
                ]
              }
            },
            "required": [
              "geoLocationPlace"
            ]
          },
          "uniqueItems": true
        },
        "accessibility": {
          "$comment":"textové vyjádření dostupnosti souborů, primárně pro harvestované zdroje. ve vkládacím formuláři by bylo pouze pro restricted access",
          "$oai": "nastavuje se pro každý zdroj zvlášť během konverze podle dostupnosti souborů ve zdrojovém systému",
          "$ref": "../multilingual-v2.0.0.json#/definitions/multilingual"
        },
        "series": {
          "description": "edice; tématicky sdružuje podobné věci, nemusí se jednat o pravou edici, ale tagování/grupování podobných záznamů",
          "$comment": "našeptávač již uložených hodnot v title",
          "type": "array",
          "items": {
            "type": "object",
            "additionalProperties": false,
            "properties": {
              "seriesTitle": {
                "type": "string"
              },
              "seriesVolume": {
                "type": "string"
              }
            },
            "required": [
              "seriesTitle"
            ]
          },
          "uniqueItems": true
        },
        "externalLocation": {
          "description": "externí umístění dokumentu (mimo repozitáře)",
          "type": "object",
          "additionalProperties": false,
          "properties": {
            "externalLocationURL" : {
              "type": "string",
              "format": "URL"
            },
            "externalLocationNote" : {
              "type": "string"
            }
          },
          "required": [
            "externalLocationURL"
          ]
        },
        "extent": {
          "description": "Extent of the work. If it is not paged, then it takes over number of pages of the entire pdf.",
          "$comment": "stejná struktura jako Size od DataCite. V NUŠL tyto hodnoty jsou. Jedná se orientační info. Do budoucna můžeme řešit automatické generování.",
            "type": "string"
        },
        "persistentIdentifiers": {
          "description": "Persistent identifier/s of object as ISBN, DOI, etc. + assigned by National Repository. Status needed for DOI requests.",
          "type": "array",
          "$comment": "Alzp: shouldn't be property status set as optional, since is used only in DOI request use case?",
          "items": {
                "$ref": "#/definitions/objectPIDs"
            },
            "uniqueItems": true
        },
        "originalRecord": {
          "description": "odkaz na původní záznam",
          "$oai": "zobrazovat koncovému uživateli v detailu záznamu jako původní místo uložení. objevuje se jen u harvestu",
          "type": "string",
          "format": "URL"
        },
       "recordIdentifiers": {
         "description": "systémové identifikátory a trvalé adresy pořízené skrze OAI, případně importy/migrace",
         "$comment_RFC" : "možná bude sekce OAI fungovat jinak,takže by bylo potřeba to upravit. Ale tohle jsou za mě údaje, které by se měli ukládat přímo v záznamu; nusl = PURL",
         "type": "array",
         "items": {
           "type": "object",
           "properties": {
             "identifier": {
               "type": "string"
             },
             "scheme": {
               "type": "string",
               "enum": [
                 "nusl",
                 "originalRecordOAI",
                 "catalogueSysNo",
                 "nrOAI"
               ]
             }
           },
           "required": [
             "identifier",
             "scheme"
           ],
           "uniqueItems": true
         }
       }
     },
      "events": {
          "description": "událost, konference",
          "type": "array",
          "items": {
            "type": "object",
            "additionalProperties": false,
            "properties": {
              "eventNameOriginal": {
                "description": "volný zápis celého názvu akce",
                "type": "string"
              },
              "eventNameAlternate": {
                "description": "zkrácená forma názvu akce nebo překladu. měla by fungovat jako alias pro vyhledávání",
                "type": "array",
                "items": {
                  "type": "string"
                }
              },
              "eventDate": {
                "description": "rozsah konání akce/konference -  date or range.",
                "$ref": "#/definitions/dateOrRange"
              },
              "eventLocation": {
                "$ref": "#/definitions/location"
              },
              "required": [
                "eventNameOriginal",
                "eventDate",
                "eventLocation"
              ]
            }
          }
        },
      "required": [
        "titles",
        "creators",
        "resourceType"
      ]
    }
  }
}
}
